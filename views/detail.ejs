<div class="container mt3">
  <div class="row">
    <div class="col-md-8">
      <h2 class="mt-3">Detail Contact</h2>
      <% if ( !contact ) { %>
      <div class="alert alert-danger mt-3" role="alert">Kontak tidak ditemukan <a href="/contact" class="alert-link">Kembali ke daftar kontak</a></div>
      <% } else { %>
      <div class="card mt-4" style="width: 18rem">
        <div class="card-body">
          <h5 class="card-title"><%= contact.nama %></h5>
          <h6 class="card-subtitle mb-2 text-body-secondary"><%= contact.nohp %></h6>
          <p class="card-text"><%= contact.email %></p>
          <a href="/contact/edit/<%= contact.nama %>" class="btn btn-info badge">Ubah</a>
          <a href="/contact/delete/<%= contact.nama %>" class="btn btn-danger badge" onclick="return confirm('yakin ingin menghapus data ini?')">Hapus</a>
          <a href="/contact" class="card-link d-block mt-3">Kembali ke daftar contact</a>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
